<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".Views.Enfermeiro.CadastroEnfermeiro1Activity">

    <ImageView
        android:id="@+id/voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/voltar" />

    <TextView
        android:layout_marginLeft="20dp"

        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Email:"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <EditText
        android:layout_marginLeft="20dp"

        android:id="@+id/emailEnfermeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:ems="13"
        android:inputType="textEmailAddress"
        />



    <TextView
        android:layout_marginLeft="20dp"

        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Digite uma senha:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
         />

    <EditText
        android:layout_marginLeft="20dp"

        android:id="@+id/senhaEnfermeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:ems="13"
        android:inputType="textPassword"
        android:textSize="18sp"

        />

    <TextView
        android:layout_marginLeft="20dp"

        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Confirme a senha:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
         />

    <EditText
        android:layout_marginLeft="20dp"

        android:id="@+id/conSenhaEnfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/borda"
        android:ems="13"
         />


    <Button
        android:layout_gravity="end"
        android:id="@+id/btnProximo1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@drawable/botton"
        android:text="PrÃ³ximo"
        />

</LinearLayout>