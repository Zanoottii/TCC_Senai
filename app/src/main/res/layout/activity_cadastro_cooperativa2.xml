<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".CadastroCooperativa2Activity">

    <ImageView
        android:id="@+id/voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/voltar" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:hint="Email da cooperativa: "
        android:textColorHint="@android:color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/emailCooperativa"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailCooperativa"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/borda"
        android:ems="15"
        android:inputType="textWebEmailAddress|textEmailAddress"
        app:layout_constraintBottom_toBottomOf="@+id/cnpj"
        app:layout_constraintEnd_toEndOf="@+id/cnpj"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cnpj"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:background="@drawable/borda"
        android:ems="15"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="217dp"
        android:hint="CNPJ da cooperativa:"
        android:textColorHint="@android:color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="44dp"
        android:hint="Estado:"
        android:textColorHint="@android:color/black"
        android:textSize="17dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cnpj" />

    <Spinner
        android:id="@+id/estadoCooperativa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:entries="@array/spinner_estados"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Municipio:"
        android:textColorHint="@android:color/black"
        android:textSize="17dp"
        app:layout_constraintBottom_toTopOf="@+id/municipioCooperativa"
        app:layout_constraintStart_toStartOf="@+id/municipioCooperativa" />

    <EditText
        android:id="@+id/municipioCooperativa"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:background="@drawable/borda"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/estadoCooperativa" />

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="155dp"
        android:layout_height="54dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/botton"
        android:text="Cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/municipioCooperativa" />

</androidx.constraintlayout.widget.ConstraintLayout>