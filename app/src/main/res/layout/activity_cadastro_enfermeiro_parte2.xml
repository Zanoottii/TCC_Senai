<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Views.Enfermeiro.CadastroEnfermeiro2Activity">

    <ImageView
        android:id="@+id/voltar3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/voltar" />

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Nome:"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <EditText
        android:layout_marginLeft="20dp"
        android:id="@+id/nomeEnfermeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:digits="abcdefghijklmnopqrstuvxwyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="13"
        android:inputType="text"
        />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sobrenome:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <EditText
        android:layout_marginLeft="20dp"
        android:id="@+id/sobrenomeEnfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:digits="abcdefghijklmnopqrstuvxwyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:ems="13"
        android:inputType="text"
       />

    <TextView
        android:layout_marginLeft="20dp"
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="CPF:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <EditText
        android:layout_marginLeft="20dp"
        android:id="@+id/cpfEnfermeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:ems="13"
        android:inputType="number"
        android:maxLength="14"
        />



    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Celular:"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        />

    <EditText
        android:layout_marginLeft="20dp"
        android:id="@+id/foneEnfermeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:ems="13"
        android:inputType="number"
        />

    <Button
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:id="@+id/btnProximo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/botton"
        android:text="PrÃ³ximo"
        />

</LinearLayout>