<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".Views.Enfermeiro.CadastroEnfermeiro4Activity">

    <ImageView
        android:id="@+id/voltar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/voltar"
        />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Foto do Perfil"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_gravity="center"
        android:id="@+id/fotoCadastro"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/perfil"
        />

    <Button
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:id="@+id/btnGaleria"
        android:layout_width="38dp"
        android:layout_height="36dp"
        android:background="@drawable/iconegaleria"
        />

    <TextView
        android:layout_marginLeft="30dp"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Numero do Coren:"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        />



    <EditText
        android:layout_marginLeft="30dp"
        android:id="@+id/numCoren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/borda"
        android:ems="10"
        android:inputType="number"
        />

    <Button
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:id="@+id/btnCadConcluido"
        android:layout_width="137dp"
        android:layout_height="45dp"
        android:background="@drawable/botton"
        android:text="ConcluÃ­do"
        />


</LinearLayout>