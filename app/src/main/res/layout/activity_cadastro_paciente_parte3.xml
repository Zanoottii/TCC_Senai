<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".views.paciente.CadastroPaciente3Activity">

    <ImageView
        android:id="@+id/ivVoltarPaciente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_voltar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Foto do Perfil"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/civFotoPaciente"
        app:layout_constraintEnd_toEndOf="@+id/civFotoPaciente"
        app:layout_constraintStart_toStartOf="@+id/civFotoPaciente" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/civFotoPaciente"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="112dp"
        android:src="@drawable/ic_usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibSelecionaFotoPaciente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/ic_galeria"
        app:layout_constraintEnd_toEndOf="@+id/civFotoPaciente"
        app:layout_constraintStart_toStartOf="@+id/civFotoPaciente"
        app:layout_constraintTop_toBottomOf="@+id/civFotoPaciente" />

    <Button
        android:id="@+id/bCadastrarPaciente"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/botao"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>